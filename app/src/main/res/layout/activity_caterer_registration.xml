<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Caterer_Registration"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"

    >
    <LinearLayout
        android:id="@+id/CReg_ll1"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/CReg_ll2"
            android:layout_width="230dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/creg_tv_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Register"
                android:textAllCaps="false"
                android:textColor="#00684E"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/creg_tv_ca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Create a new account"
                android:textAllCaps="false"
                android:textColor="#00684E"
                android:textSize="19sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/CaterChef"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/chef7" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/creg_ll3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/reg_bg1"
        android:orientation="vertical"
        android:padding="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Profile:"
            android:textColor="@color/white"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img"
                android:layout_width="200dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/ic_launcher_background" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/browse"
                android:layout_gravity="center_vertical"
                android:text="Browse"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/creg_ll4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/creg_ll5"
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/creg_tv_fname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="FIRST NAME"
                    android:textColor="#fff"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/creg_et_fname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="FirstName"
                    android:outlineSpotShadowColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/creg_ll6"
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/creg_tv_lname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="LAST NAME"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/creg_et_lname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Last Name"
                    android:outlineSpotShadowColor="@color/white"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/creg_tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="PHONE"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/creg_et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:textColor="@color/white"
            android:minHeight="48dp"
            android:outlineSpotShadowColor="@color/white"
            android:textColorHint="@color/white" />

        <TextView
            android:id="@+id/creg_tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="EMAIL"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/creg_et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="E-Mail Address"
            android:minHeight="48dp"
            android:textColor="@color/white"
            android:outlineSpotShadowColor="@color/white"
            android:textColorHint="@color/white" />

        <TextView
            android:id="@+id/creg_tv_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="PASSWORD"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/creg_et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textColor="@color/white"
            android:minHeight="48dp"
            android:inputType="textPassword"
            android:outlineSpotShadowColor="@color/white"
            android:textColorHint="@color/white" />

        <TextView
            android:id="@+id/creg_tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="City"
            android:textColor="@color/white"
            android:textStyle="bold" />


        <Spinner
            android:id="@+id/simpleSpinner"
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"

            android:background="@drawable/bg_spinner"
            android:padding="15dp" />

        <TextView
            android:id="@+id/creg_tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Address"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/creg_et_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Home Address"
            android:minHeight="48dp"
            android:textColor="@color/white"
            android:outlineSpotShadowColor="@color/white"
            android:textColorHint="@color/white" />


        <android.widget.Button
            android:layout_width="316dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/reg_page_btn"
            android:padding="15dp"
            android:text="Register"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="15sp"
            android:id="@+id/creg_reg_button"
            android:textStyle="bold"
            tools:ignore="DuplicateSpeakableTextCheck" />

        <LinearLayout
            android:id="@+id/creg_ll7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/creg_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                android:text="Already have an account?"
                android:textColor="#00C853"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/creg_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                android:text="@string/my_logIn"
                android:textColor="#304FFE"
                android:textSize="16sp"
                android:textStyle="bold" />

</LinearLayout>
    </LinearLayout>
</LinearLayout>
</ScrollView>
