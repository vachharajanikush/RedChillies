<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00684E"
    tools:context=".Caterer_Add_Tiffin">

    <LinearLayout
        android:id="@+id/ctadd_ll2"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="742dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:padding="40dp">

        <TextView
            android:id="@+id/ctadd_tv_tname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="TIFFIN NAME"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ctadd_et_tname"
            android:layout_width="346dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/edt_txt"
            android:drawablePadding="16dp"
            android:hint="Tiffin Name"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:padding="16dp"
            android:singleLine="true"
            android:textColor="#000"
            android:textColorHint="#00684E" />

        <TextView
            android:id="@+id/ctadd_tv_tprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Menu PRICE"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ctadd_et_tprice"
            android:layout_width="346dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/edt_txt"
            android:drawablePadding="16dp"
            android:hint="Menu Price"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:padding="16dp"
            android:singleLine="true"
            android:textColor="#000"
            android:textColorHint="#00684E" />

        <TextView
            android:id="@+id/ctadd_tv_tdes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Menu Name"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ctadd_et_menu_name"
            android:layout_width="346dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/edt_txt"
            android:drawablePadding="16dp"
            android:hint="Menu Name"
            android:imeOptions="actionNext"
            android:inputType="textMultiLine"
            android:padding="16dp"
            android:singleLine="true"
            android:textColor="#000"
            android:textColorHint="#00684E" />

        <TextView
            android:id="@+id/ctadd_tv_menu_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Menu Description"
            android:textColor="@color/white"
            android:textStyle="bold" />
        <EditText
            android:inputType="textMultiLine"
            android:lines="15"
            android:minLines="8"
            android:background="@drawable/edt_txt"
            android:gravity="top|start"
            android:maxLines="20"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            android:id="@+id/ctadd_et_menudesc"
            />

        <LinearLayout
            android:id="@+id/ctadd_ll5"
            android:layout_width="345dp"
            android:layout_height="162dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ctadd_tv_timage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="IMAGE"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ctadd_ll6"
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ctadd_package_image"
                    android:layout_width="match_parent"
                    android:layout_height="136dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ctadd_ll7"
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/ctadd_upload_button"
                    android:layout_width="127dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="32dp"
                    android:backgroundTint="@color/white"
                    android:text="UPLOAD"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
        <android.widget.Button
            android:layout_width="316dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/reg_page_btn"
            android:padding="15dp"
            android:id="@+id/ctadd_add_button"
            android:text="Add"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:ignore="DuplicateSpeakableTextCheck" />
    </LinearLayout>

</ScrollView>