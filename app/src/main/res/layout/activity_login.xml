<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="#fff"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:background="#00684E"
        android:orientation="horizontal"
        android:id="@+id/ll_1"
        >
        <ImageView
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            android:textColor="#F1E6E6"
            android:textSize="35sp"
            android:id="@+id/tv_title"
            android:textStyle="bold|italic"
            android:gravity="center"
            android:layout_marginLeft="73dp"
            android:layout_marginTop="0dp"
            android:fontFamily="sans-serif-condensed"
            />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/chilly"
            />


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_below="@+id/ll_1"
        android:background="#00684E"
        android:id="@+id/vw1"
        tools:ignore="NotSibling"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/rl_1"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="20dp"

            android:id="@+id/img_tomato"
            android:src="@drawable/tomato" />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/carrot"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="49dp"
            />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/veg2"
            android:layout_marginTop="85dp"
            android:layout_marginLeft="99dp"

            />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/veg3"
            android:layout_marginTop="85dp"
            android:layout_marginLeft="159dp"
            />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/veg4"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="219dp"
            />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/veg5"
            android:layout_marginTop="95dp"
            android:layout_marginLeft="279dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_1"
        android:background="#fff"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Sign In,"
            android:textAllCaps="false"
            android:textColor="#00684E"
            android:textSize="35sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/login_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/edt_txt"
            android:drawableRight="@drawable/ic_phone"
            android:drawablePadding="16dp"
            android:hint="Phone"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:padding="16dp"
            android:singleLine="true"
            android:textColor="#000"
            android:textColorHint="#00684E" />

        <EditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edt_txt"
            android:drawableRight="@drawable/ic_lock"
            android:drawablePadding="16dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:imeOptions="actionNext"
            android:padding="16dp"
            android:singleLine="true"
            android:textColor="#000"
            android:textColorHint="#00684E" />

        <android.widget.Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/btn_login_1"
            android:text="Sign In"
            android:textColor="#fff"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_4"
        android:orientation="horizontal"
        android:layout_below="@id/rl_1"
        android:layout_weight="1"
        android:layout_marginTop="340dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Don't Have An Account?"
            android:textSize="16sp"
            android:layout_weight="0.02"
            android:id="@+id/tv1"
            android:layout_marginHorizontal="40dp"
            android:textColor="#00C853"
            android:layout_marginLeft="45dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/my_register"
            android:textSize="16sp"
            android:layout_marginRight="30dp"
            android:layout_weight="0.04"
            android:textColor="#304FFE"
            android:id="@+id/login_register_click"
            android:textStyle="bold"
            />

    </LinearLayout>
</RelativeLayout>