<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00684E"
    tools:context=".Welcome_Button">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/img1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:src="@drawable/welcome"/>

        <android.widget.Button
            android:id="@+id/welcome_button1"
            android:layout_width="260dp"
            android:layout_height="88dp"
            android:layout_margin="10dp"
            android:background="@drawable/custom3"
            android:text="User Registration"
            android:textColor="#fff"
            android:textSize="20sp" />

        <android.widget.Button
            android:id="@+id/welcome_button2"
            android:layout_width="260dp"
            android:layout_height="88dp"
            android:layout_margin="10dp"
            android:background="@drawable/custom4"
            android:text="Caterer Registration "
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>