<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePageCatererInfo"
    android:background="#00684E"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:id="@+id/HPCI_TITLE"
        android:textStyle="bold"

        android:text="CATERER'S  DETAILS"
        android:gravity="center"
        android:textColor="#fff"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:id="@+id/HPCI_FNAME"
        android:layout_marginLeft="20dp"
        android:textSize="18sp"
        android:text="Caterer FirstName"
        android:gravity="left"
        android:textColor="@color/white"
        />

    <TextView
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/HPCI_LNAME"
        android:layout_marginLeft="20dp"
        android:text="Caterer LastName"
        android:gravity="left"
        android:textColor="@color/white"
        />

    <TextView
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/HPCI_PHONE"
        android:layout_marginLeft="20dp"
        android:text="Caterer Phone"
        android:gravity="left"
        android:textColor="@color/white"
        />

    <TextView
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/HPCI_Email"
        android:layout_marginLeft="20dp"
        android:text="Caterer Email"
        android:gravity="left"
        android:textColor="@color/white"
        />

    <TextView
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/HPCI_CITY"
        android:layout_marginLeft="20dp"
        android:text="Caterer City"
        android:gravity="left"
        android:textColor="@color/white"
        />

    <TextView
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/HPCI_Address"
        android:layout_marginLeft="20dp"
        android:text="Caterer Address"
        android:gravity="left"
        android:textColor="@color/white"
        />

    <android.widget.Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHOW   EVENTS"
        android:background="@drawable/btn_login_2"
        android:padding="25dp"
        android:textColor="@color/black"
        android:layout_marginTop="120dp"
       android:layout_gravity="center"
        android:id="@+id/HPCI_EVENT_BUTTON"
        />
    <android.widget.Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHOW   TIFFIN"
        android:background="@drawable/btn_login_2"
        android:padding="25dp"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:id="@+id/HPCI_TIFFIN_BUTTON"
        />

</LinearLayout>