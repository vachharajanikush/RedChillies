<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/cmanage_logo"
            android:layout_width="309dp"
            android:layout_height="355dp"
            android:layout_marginBottom="50dp"
            app:srcCompat="@drawable/chef_view2" />

        <android.widget.Button
            android:id="@+id/cmanage_button1"
            android:layout_width="216dp"
            android:layout_height="70dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom1"
            android:text="View Package"
            android:textColor="#fff"
            android:textSize="20sp" />


        <android.widget.Button
            android:id="@+id/cmanage_button2"
            android:layout_width="216dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom1"
            android:text="View Tiffin"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>




</LinearLayout>