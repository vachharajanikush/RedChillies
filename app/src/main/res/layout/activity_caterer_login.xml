<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00684e"
    tools:context=".Caterer_Login">
    <LinearLayout
        android:id="@+id/cl_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_centerVertical="true"
        android:background="#00684E"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cl_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Caterer Sign In,"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="35sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/cl_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/edt_txt"
            android:drawableRight="@drawable/ic_phone"
            android:drawablePadding="16dp"
            android:hint="Phone"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:padding="16dp"
            android:singleLine="true"
            android:textColor="#000"
            android:textColorHint="#00684E" />

        <EditText
            android:id="@+id/cl_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edt_txt"
            android:drawableRight="@drawable/ic_lock"
            android:drawablePadding="16dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:imeOptions="actionNext"
            android:padding="16dp"
            android:singleLine="true"
            android:textColor="#000"
            android:textColorHint="#00684E" />

        <android.widget.Button
            android:id="@+id/cl_btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/btn_login_2"
            android:text="Sign In"
            android:textColor="#00684e"
            android:textStyle="bold" />
    </LinearLayout>


    <ImageView
        android:id="@+id/cl_chef_6"
        android:layout_width="225dp"
        android:layout_height="271dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="187dp"
        android:layout_marginBottom="-24dp"
        app:srcCompat="@drawable/chef6" />

    <ImageView
        android:id="@+id/cl_logo_1"
        android:layout_width="305dp"
        android:layout_height="137dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="false"
        android:layout_marginTop="27dp"
        android:layout_marginRight="51dp"
        app:srcCompat="@drawable/logo1" />

</RelativeLayout>